{
  "name": "mayfair-hotel-backend",
  "version": "1.0.0",
  "description": "Backend API for Mayfair Hotel Management System",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "cd ../frontend && npm install && npm run build:production",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:unit": "jest tests/unit --verbose",
    "test:all": "npm run lint && npm run test:coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "validate": "npm run lint && npm run test:coverage",
    "swagger:generate": "node -e \"console.log('Swagger docs available at http://localhost:3000/api-docs')\"",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "build": "babel src --out-dir dist",
    "docker:build": "docker build -t mayfair-hotel-backend .",
    "docker:run": "docker run -p 3000:3000 mayfair-hotel-backend"
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "Mayfair Hotel Development Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "agenda": "^5.0.0",
    "aws-sdk": "^2.1450.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "fast-csv": "^4.3.6",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "objection": "^3.1.5",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "razorpay": "^2.9.2",
    "redis": "^4.6.8",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "stripe": "^13.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.15.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "babel-jest": "^29.6.4",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayfair-hotel/management-system.git"
  },
  "bugs": {
    "url": "https://github.com/mayfair-hotel/management-system/issues"
  },
  "homepage": "https://github.com/mayfair-hotel/management-system#readme"
}
