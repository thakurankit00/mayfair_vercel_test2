# Mayfair Hotel Management System - Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME="Mayfair Hotel Management System"
APP_VERSION=1.0.0

# Database Configuration - Supabase
DB_HOST=aws-1-ap-southeast-1.pooler.supabase.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres.aglpkgpajcgjdlfunwyr
DB_PASSWORD=Aadya@2025
DB_SSL=true

# Alternative: Use DATABASE_URL for Supabase
DATABASE_URL=postgresql://postgres.aglpkgpajcgjdlfunwyr:YOUR_SUPABASE_PASSWORD@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=mayfair_redis_password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Hotel Information
HOTEL_NAME="Mayfair Hotel"
HOTEL_ADDRESS="Near BSNL Exchange, Mandi, Himachal Pradesh"
HOTEL_PHONE_NUMBER=+91-XXXXXXXXXX
HOTEL_EMAIL=info@mayfairhotel.com
HOTEL_WEBSITE_URL=https://mayfairhotel.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@mayfairhotel.com

# SMS Configuration (Twilio)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway - Razorpay (Primary)
RAZORPAY_ENABLED=true
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Payment Gateway - Stripe (Secondary)
STRIPE_ENABLED=false
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MY_BUSINESS_ACCOUNT_ID=your_gmb_account_id
GOOGLE_MY_BUSINESS_LOCATION_ID=your_gmb_location_id
GOOGLE_MAPS_ENABLED=false

# MakeMyTrip Integration
MAKEMYTRIP_ENABLED=false
MAKEMYTRIP_PARTNER_ID=your_mmt_partner_id
MAKEMYTRIP_API_KEY=your_mmt_api_key
MAKEMYTRIP_SECRET_KEY=your_mmt_secret_key
MAKEMYTRIP_HOTEL_ID=your_mmt_hotel_id

# Airbnb Integration
AIRBNB_ENABLED=false
AIRBNB_CLIENT_ID=your_airbnb_client_id
AIRBNB_CLIENT_SECRET=your_airbnb_client_secret
AIRBNB_ACCESS_TOKEN=your_airbnb_access_token
AIRBNB_LISTING_ID=your_airbnb_listing_id

# Booking.com Integration
BOOKING_COM_ENABLED=false
BOOKING_COM_HOTEL_ID=your_booking_com_hotel_id
BOOKING_COM_USERNAME=your_booking_com_username
BOOKING_COM_PASSWORD=your_booking_com_password
BOOKING_COM_HOTEL_CODE=your_booking_com_hotel_code

# Yatra Integration
YATRA_ENABLED=false
YATRA_PARTNER_ID=your_yatra_partner_id
YATRA_PASSWORD=your_yatra_password
YATRA_AGENT_CODE=your_yatra_agent_code
YATRA_HOTEL_CODE=your_yatra_hotel_code
YATRA_CITY_CODE=your_yatra_city_code

# EaseMyTrip Integration
EASEMYTRIP_ENABLED=false
EASEMYTRIP_AGENT_ID=your_easemytrip_agent_id
EASEMYTRIP_PASSWORD=your_easemytrip_password
EASEMYTRIP_IP_ADDRESS=your_registered_ip
EASEMYTRIP_HOTEL_CODE=your_easemytrip_hotel_code

# Trivago Integration
TRIVAGO_ENABLED=false
TRIVAGO_HOTEL_ID=your_trivago_hotel_id
TRIVAGO_API_KEY=your_trivago_api_key

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DATE_PATTERN=YYYY-MM-DD

# Development Settings
DEBUG=mayfair:*
HOT_RELOAD=true

