# Mayfair Hotel Management System - Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:3000/api/v1
REACT_APP_SOCKET_URL=http://localhost:3000
REACT_APP_ENV=development

# Google Maps API Key (for location services)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Gateway Configuration
REACT_APP_RAZORPAY_KEY_ID=rzp_test_your_key_id
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Hotel Information
REACT_APP_HOTEL_NAME=Mayfair Hotel
REACT_APP_HOTEL_ADDRESS=Near BSNL Exchange, Mandi, Himachal Pradesh
REACT_APP_HOTEL_PHONE=+91-XXXXXXXXXX
REACT_APP_HOTEL_EMAIL=info@mayfairhotel.com

# Application Settings
REACT_APP_VERSION=1.0.0
REACT_APP_DEBUG=false

# Feature Flags
REACT_APP_ENABLE_GOOGLE_MAPS=false
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
